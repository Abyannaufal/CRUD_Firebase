<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dataUpload"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="CHECK-IN FORM"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="25dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="A11.2017.10791"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Form name here.." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount of Bed"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/et_Bed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insert bed amount" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/et_Note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insert your note here.." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/sp_Classes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:entries="@array/str_Classes"
            android:scrollbarSize="33dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fasilitas"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/sp_Facility"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:entries="@array/str_Facility"
            android:scrollbarSize="33dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/txt_Price"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/bt_Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-In"/>

        <TextView
            android:id="@+id/q_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard"/>

        <TextView
            android:id="@+id/q_su"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Superrior"/>
        <TextView
            android:id="@+id/q_dl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deluxe"/>

    </LinearLayout>

</LinearLayout>